{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "jest"],
      "skipLibCheck": true
    },
    "include": [
      "src/**/*",
      "tests/*",
      "tests/index.spec.ts",
      "tests/example.spec.ts"
  , "tests"  ],
    "exclude": [
      "tests/**/*.spec.ts"
    ]
  }
  